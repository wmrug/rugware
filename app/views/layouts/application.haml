!!! 5
%head
  %title WMRUG - West Midlands Ruby User Group
  = stylesheet_link_tag 'reset', 'application'
  = javascript_include_tag 'jquery-1.4.2.js', 'jquery.lwtCountdown-1.0.js', 'jquery.rails.js'
  = csrf_meta_tag
%body
  - if flash[:error]
    %div= flash[:error]
  -elsif flash[:success]
    %div= flash[:success]
  #content
    #header
      != render :partial => "shared/countdown"
      #logo
        %h1 WMRUG
      #nav
    = yield
    != countdown_script_for_next_event