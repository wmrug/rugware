!!! 5
%head
  %title WMRUG - West Midlands Ruby User Group
  = stylesheet_link_tag 'reset', 'application'
  = javascript_include_tag :defaults
  = csrf_meta_tag
%body
  / Countdown dashboard start
  #countdown_dashboard
    .dash.weeks_dash
      %span.dash_title weeks
      .digit 0
      .digit 0
    .dash.days_dash
      %span.dash_title days
      .digit 0
      .digit 0
    .dash.hours_dash
      %span.dash_title hours
      .digit 0
      .digit 0
    .dash.minutes_dash
      %span.dash_title minutes
      .digit 0
      .digit 0
    .dash.seconds_dash
      %span.dash_title seconds
      .digit 0
      .digit 0
  / Countdown dashboard end
  - if flash[:error]
    %div= flash[:error]
  -elsif flash[:success]
    %div= flash[:success]
  #content
    #header
      #logo
        %h1 WMRUG
      #nav
    = yield
  :javascript
    jQuery(document).ready(function() {
      $('#countdown_dashboard').countDown({
        targetDate: {
          'day':    15, 'month':  9, 'year':   2010, 'hour':   7, 'min':    0, 'sec':    0
        }
      });
  
      $('#email_field').focus(email_focus).blur(email_blur);
      $('#subscribe_form').bind('submit', function() { return false; });
    });
